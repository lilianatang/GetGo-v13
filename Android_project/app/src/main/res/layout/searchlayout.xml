<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.macewan.getgo.getgo_v13.UIPages.SearchPage"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="374dp"
        android:layout_height="114dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:background="@drawable/toolbar">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/city_button"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/degree_button"
                android:layout_width="118dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_boarder"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="123dp" />

            <Button
                android:id="@+id/institution_button"
                android:layout_width="118dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/degree_button"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="123dp" />

            <Button
                android:id="@+id/city_button"
                android:layout_width="118dp"
                android:layout_height="59dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/degree_button"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="120dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/explore"
        android:layout_width="232dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:text="Explore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/explore"
        app:layout_constraintVertical_bias="0.8"
        tools:ignore="UnknownId" />

</android.support.constraint.ConstraintLayout>